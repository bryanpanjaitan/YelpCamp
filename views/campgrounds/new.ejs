<% include ../partials/header %>

    <div class="container">
        <h1 style="text-align: center;">Create a new Campground</h1>

        <form action="/campgrounds" method="POST">
            <div class="col-sm-12 col-lg-6 mx-auto">
                <div class="input-group mb-3">
                    <input class="form-control" type="text" placeholder="Name of campground" name="name">
                </div>
                
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="basic-addon1">$</span>
                    </div>
                    <input class="form-control" type="number" step=".01" min="0" placeholder="Price per night" name="rate">
                </div>
                
                <div class="input-group mb-3">
                    <input class="form-control" type="text" placeholder="Image URL" name="image">
                </div>
                
                <div class="input-group mb-3">
                    <textarea class="form-control" rows="5" type="text" placeholder="Enter description of campground" name="description"></textarea></textarea>
                </div>
                
                <div class="input-group mb-3">
                    <button class="btn btn-block btn-primary">Submit</button>
                </div>
                
                <a href="/campgrounds">Go back</a>
            </div>
        </form>
        
        
        
    </div>

<% include ../partials/footer %>