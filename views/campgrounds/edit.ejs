<% include ../partials/header %>

    <div class="container">
        <h1 style="text-align: center;">Edit <%= campground.name %></h1>
        
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
            <div class="col-sm-12 col-lg-8 mx-auto">
                <div class="input-group mb-3">
                    <input class="form-control" type="text" name="campground[name]" value="<%= campground.name %>">
                </div>
                
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="basic-addon1">$</span>
                    </div>
                    <input class="form-control" type="number" step=".01" min="0" name="campground[rate]" value="<%= campground.rate %>">
                </div>
                
                <div class="input-group mb-3">
                    <input class="form-control" type="text" name="campground[image]" value=<%= campground.image %>>
                </div>
                
                <div class="input-group mb-3">
                    <textarea class="form-control" rows="5" type="text" name="campground[description]"><%= campground.description %></textarea>
                </div>
                
                <div class="input-group mb-3">
                    <button class="btn btn-block btn-primary">Submit</button>
                </div>
                
                <a href="/campgrounds/<%= campground._id %>">Go back</a>
            </div>
        </form>
    </div>
    
<% include ../partials/footer %>