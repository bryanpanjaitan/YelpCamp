<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="card">
                <img class="card-img-top" src="<%= campground.image %>">
                <div class="card-body">
                    <h4 class="float-right">$9.00/night</h4>
                    <h4><a class="card-link" href="#"><%= campground.name %></a></h4>
                    <p><%= campground.description %></p>
                    <footer class="blockquote-footer">Submitted by <%= campground.author.username %></footer>
                    <% if(currentUser && campground.author.id.equals(currentUser._id)) { %>
                    <div class="container">
                        <a class="btn btn-sm btn-warning" href="/campgrounds/<%= campground._id %>/edit">Edit</a>
                        <form id="deletebtn" action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </div>
                    <% } %>
                </div>
            </div>
            <div id="reviews">
                <div class="card bg-light">
                    <div class="card-body text-right">
                        <a class="btn btn-sm btn-success" href="/campgrounds/<%= campground._id %>/comments/new">Add new comment</a>
                    </div>
                    <hr>
                    <div class="card-body">
                        <% campground.comments.forEach(function(comment) { %>
                            <div class="row">
                                <div class="col-md-12">
                                    <strong><%= comment.author.username %></strong>
                                    <span class="float-right">10 days ago</span>
                                    <p><%= comment.text %></p>
                                    <% if(currentUser && comment.author.id.equals(currentUser._id)) { %>
                                        <a class="btn btn-sm"
                                            href="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>/edit">Edit</a>
                                        <a class="btn btn-sm deletebtn">Delete</a>
                                    <% } %>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>